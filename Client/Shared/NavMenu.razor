                </NotAuthorized>
            </AuthorizeView>

            <AuthorizeView Roles="Client">
                <Authorized>
                    <li class="nav-item">
                    <a
                        class="nav-link "
                        href="post-job"
                        role="button"
                        data-bs-auto-close="outside"
                        aria-expanded="false"
