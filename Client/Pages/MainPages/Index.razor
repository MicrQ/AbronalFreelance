                <h3 class="cta-counter-title fw-bold">
                    <span class="counter">32</span><span>+</span>
                </h3>
                <p class="cta-counter-desc fw-bold">Total Freelancers</p>
                </div>
                <div class="cta-counter-item">
                <h3 class="cta-counter-title fw-bold">
                    <span class="counter">26</span><span>+</span>
                </h3>
                <p class="cta-counter-desc fw-bold">Active Users</p>
                </div>
            </div>
            </div>
            <div class="col-12 col-xl-5 mt-5 mt-xl-0">
            <div class="cta-img">
                <img
                src="img/cta/cta-img.png"
                class="img-fluid w-100"
                alt=""/>
            </div>
            </div>
        </div>
        </div>
    </div>
    </section>
    <!-- Cta End -->

    <!-- Recent Job -->
<section class="py-110">
    <div class="container">
        <div class="row mb-40 justify-content-between align-items-end">
            <div class="col-md-auto">
                <h2 class="fw-bold section-title">Recent Job Post</h2>
                <p class="section-desc">Find your dream job and earn!</p>
            </div>
            <div class="col-md-auto position-relative mt-30 mt-md-0">
                <div class="d-flex gap-3">
                    <button class="recentJobPrev swiper-prev">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
                        </svg>
                    </button>
                    <button class="recentJobNext swiper-next">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <div class="swiper recentJob">
            <div class="swiper-wrapper">
                @foreach (var job in Jobs) {
                    <article class="swiper-slide">
                        <div class="job-post bg-offWhite position-relative">
                            <div class="job-type-badge position-absolute d-flex flex-column gap-2">
                                @* <p class="job-type-badge-primary">Hourly</p> *@
                                <p class="job-type-badge-secondary">
                                    @(JobTypes.FirstOrDefault(jt => jt.Id == job.JobTypeId)?.Name)
                                </p>
                            </div>
                            <div class="d-flex flex-column justify-content-center align-items-center">
                                <div class="job-post-icon">
                                    <img src="img/job/1.svg" alt="" />
                                </div>
                                <p class="job-post-subtitle fw-normal">ETB @job.Budget</p>
                                <h3 class="job-post-title fw-semibold">
                                    <a href="job/@job.Id">@job.Title</a>
                                </h3>
                                <a href="job/@job.Id" class="w-btn-primary-xl">
                                    Apply Now
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="10" viewBox="0 0 14 10" fill="none">
                                        <path d="M9 9L13 5M13 5L9 1M13 5L1 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </article>
                }
                
            </div>
        </div>
    </div>
</section>

<!-- Recent Job End -->

<!-- Top Sellers -->
    <section class="top-sellers-area bg-offWhite py-110">
    <div class="container">
        <div class="row justify-content-between align-items-end mb-40">
            <div class="col-auto">
                <h2 class="fw-bold section-title">Top Sellers</h2>
                <p class="section-desc">Get some Inspirations from 32+ Freelancers</p>
            </div>
            <div class="col-auto mt-30 mt-md-0">
                <div class="d-flex justify-content-end">
                    <a href="find-freelancer" class="w-btn-link">
                        View More
                        <svg width="14" height="10" viewBox="0 0 14 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 9L13 5M13 5L9 1M13 5L1 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <div class="row row-gap-4 justify-content-center row-cols-md-2 row-cols-lg-3 row-cols-xl-5">
            @foreach (var freelancer in topFreelancers) {
                @if (count == 5) { break;}
                <article>
                    <div class="bg-white top-seller-card position-relative">
                        <div class="job-type-badge position-absolute d-flex flex-column gap-2">
                            <p class="job-type-badge-secondary"> Top </p>
                        </div>
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <div class="seller-profile-img mb-4">
                                <img src="img/top-seller/3.png" alt=""/>
                            </div>
                            <h3 class="top-seller-name fw-bold">
                                @freelancer.FirstName @freelancer.LastName
                            </h3>
                            <p class="top-seller-title">@(freelancer.Headline)</p>
                            <div class="top-seller-rating mb-4">
                                <p class="d-flex align-items-center top-seller-rating">
                                    <svg style="color:rgb(255, 192, 55)" width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M11.1141 4.65628C11.0407 4.42385 10.8406 4.25929 10.6048 4.23731L7.38803 3.93649L6.11676 0.870622C6.0229 0.645376 5.80934 0.5 5.57163 0.5C5.33392 0.5 5.12027 0.645376 5.02701 0.870622L3.75574 3.93649L0.538508 4.23731C0.302669 4.25973 0.102963 4.42429 0.0291678 4.65628C-0.0442024 4.8887 0.0235566 5.14364 0.201923 5.30478L2.63351 7.5011L1.91656 10.7539C1.8641 10.993 1.95422 11.2403 2.14687 11.3838C2.25042 11.4613 2.37208 11.5 2.49417 11.5C2.59908 11.5 2.70407 11.4713 2.79785 11.4135L5.57163 9.70504L8.3449 11.4135C8.54835 11.5387 8.80417 11.5272 8.99639 11.3838C9.18904 11.2403 9.27916 10.993 9.22671 10.7539L8.50975 7.5011L10.9413 5.30478C11.1196 5.14364 11.1875 4.88923 11.1141 4.65628Z" fill="currentColor"/>
                                    </svg>
                                    @freelancer.AverageRating
                                    <span class="top-seller-review">(0 Reviews)</span>
                                </p>
                            </div>
                            <a href="freelancers/user-id/details" class="w-btn-primary-lg">
                                View Profile
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="10" viewBox="0 0 14 10" fill="none">
                                    <path d="M9 9L13 5M13 5L9 1M13 5L1 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </article>
                count++;
            }
        </div>
    </div>
    </section>

    <!-- Top Sellers End -->

    <!-- Core Cta -->
    <section class="pt-110 bg-offWhite mb-30">
        <div class="container">
            <div class="cta-wrapper position-relative" style="background: url('img/cta/cta-bg.png') no-repeat center center/cover;">
                <div class="row justify-content-between">
                    <div class="col-lg-6">
                        <div>
                            <h2 class="section-title-light fw-bold mb-4">
                                Find the talent needed to get your business growing.
                            </h2>
                            <p class="text-white mb-5">
                                There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour.
                            </p>
                            <a href="register" class="cta-btn-link">
                                Get Started
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="10" viewBox="0 0 14 10" fill="none">
                                    <path d="M9 9L13 5M13 5L9 1M13 5L1 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div>
                            <img src="img/cta/men-women.png" class="cta-people position-absolute d-none d-lg-block" alt=""/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Core Cta End -->

</main>
<Footer />

@code {
    private List<JobDTO> Jobs = new List<JobDTO>();
    private int count = 0;
    private List<JobType> JobTypes = new List<JobType>();
    private List<Field> Fields = new List<Field>();
    private List<FreelancerProfileDTO> topFreelancers = new List<FreelancerProfileDTO>();
    protected override async Task OnInitializedAsync() {
        Jobs = await JobService.GetRecentJobsAsync(null);
        JobTypes = await JobTypeService.GetAllJobTypesAsync();

        topFreelancers = await ProfileService.GetTopFreelancersAsync();
        Fields = await FieldService.GetAllFieldsAsync();
    }
}
